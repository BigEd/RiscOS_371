/*------------------------------------------------------------------------*/
#define TRUE 1
/*------------------------------------------------------------------------*/
#define FALSE 0
/*------------------------------------------------------------------------*/
#endif

/*-----------------------------------------------------------------*/
#define STRFILL(x,y) {strncpy(x,y,sizeof(x)-1); x[sizeof(x)-1]=0;}

/*-----------------------------------------------------------------*/
#define WORDALIGN(x) (((x)&3)?((x)&~3)+4:(x))
